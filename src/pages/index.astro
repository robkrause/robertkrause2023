---
import Layout from '../layouts/Layout.astro'
import PostCard from '../components/PostCard.astro'
import type { Post } from '../models/Post'
import { homePagePostsQuery } from '../lib/api'

const data = await homePagePostsQuery()
const posts: Post[] = data.posts.nodes
---

<Layout title="Robert Krause – Blog">
	<main class="flex flex-col items-center">
		<h1 class="my-12 text-7xl">Robert Krause – Blog</h1>
		<div class="grid max-w-7xl gap-10 sm:grid-cols-2">
			{
				posts.map((post) => {
					return <PostCard class="py-6" post={post} />
				})
			}
		</div>
	</main>
</Layout>
